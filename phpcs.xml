<?xml version="1.0"?>
<ruleset name="Olympus Artemis Backend theme">
  <description>Olympus Artemis Backend theme coding standard in PSR2.</description>

  <exclude-pattern>.git/*</exclude-pattern>
  <exclude-pattern>node_modules/*</exclude-pattern>
  <exclude-pattern>resources/assets/*</exclude-pattern>
  <exclude-pattern>tasks/*</exclude-pattern>
  <exclude-pattern>vendor/*</exclude-pattern>
  <exclude-pattern>Gruntfile.js</exclude-pattern>

  <arg name="report-width" value="auto"/>
  <arg value="-colors"/>
  <arg value="np"/>

  <rule ref="PSR2"/>
</ruleset>
